<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TogglWatcher.ViewModels;assembly=TogglWatcher"
		xmlns:views="clr-namespace:TogglWatcher.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		MinWidth="400" MinHeight="400"
		SizeToContent="WidthAndHeight"
		CanResize="False"
        x:Class="TogglWatcher.Views.MainWindow"
        Icon="/Assets/toggl.ico"
        Title="TogglWatcher" Padding="5">

	<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
		<ContentControl Content="{Binding WatcherPanelContent}" />
	</Grid>
</Window>
